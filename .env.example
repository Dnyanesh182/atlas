# Environment Configuration for ATLAS

# General
ATLAS_ENV=development
ATLAS_DEBUG=false

# LLM Provider (openai, anthropic, local)
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7

# API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Memory Configuration
MEMORY_PERSIST_DIR=data/memory
MEMORY_VECTOR_STORE=faiss
MEMORY_EMBEDDING_MODEL=text-embedding-ada-002

# Agent Configuration
AGENT_MAX_RETRIES=3
AGENT_QUALITY_THRESHOLD=7.0

# Tool Configuration
TOOL_ENABLE_WEB_SEARCH=true
TOOL_ENABLE_FILE_OPS=true
TOOL_ENABLE_CODE_EXECUTION=false
TOOL_ENABLE_SHELL_EXECUTION=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-api-key-here

# Observability
OBSERVABILITY_LOG_LEVEL=INFO
OBSERVABILITY_ENABLE_TRACING=true
OBSERVABILITY_ENABLE_METRICS=true
